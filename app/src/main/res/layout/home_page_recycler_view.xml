<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rv_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/recycler_view_background"
    android:layout_marginTop="@dimen/recycler_view_layout_margin_top"
    android:layout_marginBottom="@dimen/recycler_view_layout_margin_bottom"
    >

    <TextView
        android:id="@+id/tv_module_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recycler_view_description_placeholder"
        android:textAppearance="@style/TextAppearance.MyTheme.Subtitle1"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_module_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recycler_view_result_placeholder"
        android:gravity="center"
        android:layout_marginEnd="40dp"
        android:textAppearance="@style/TextAppearance.MyTheme.Subtitle1"
        app:layout_constraintEnd_toStartOf="@+id/iv_edit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/recycler_view_image_view_description" />
</androidx.constraintlayout.widget.ConstraintLayout>